<div>
  <h1>List of Users</h1>
  <ul>
    <% @users.each do |user| %>
      <li>
        <div>
          <img src=<%= user.photo %> />
        </div>
        <div>
          <h2><%= link_to user.name, user_path(user) %></h2>
          <p>Number of posts: <%= user.posts_counter %></p>
        </div>
      </li>
    <%end%>
  </ul>
</div>